span File
ul.menu-list
  li.menu-list-item(ng-if='showUpdateGist()')
    a(ng-click='updateGist()')
      span Update Gist

  li.menu-list-item(ng-if='showSaveGist()')
    a(ng-click='createGist()')
      span Save Gist

  li.menu-list-item(ng-if='showForkGist()')
    a(ng-click='forkGist()')
      span Fork Gist

  li.menu-list-item(ng-if='showLoginToSaveGists()')
    a.github(href='/authorize' ng-click='login()')
      span Log in with your GitHub account to save gists

  li.menu-list-item(ng-if='showViewOnGitHub()')
    a#gist-link.github(ng-href='https://gist.github.com/{{gist.id}}')
      span View on GitHub

  li.menu-list-item
    a#reset.reset-icon(ng-click='reset()')
      span Reset

